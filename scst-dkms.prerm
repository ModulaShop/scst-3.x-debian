#!/bin/sh -e

DKMS_NAME=scst
DKMS_VERSION=3.3.0

case "$1" in
    remove|upgrade|deconfigure|install)
      if [  "$(dkms status -m $DKMS_NAME -v $DKMS_VERSION)" ]; then
         dkms remove -m $DKMS_NAME -v $DKMS_VERSION --all
	 sudo sh -c "if [ -f /var/lib/dkms/scst ] ; then rm /var/lib/dkms/scst; fi"
      fi
    ;;
esac
